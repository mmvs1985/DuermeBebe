<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="80dp"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="6dp"
    android:layout_marginRight="2.5dp"
    android:layout_marginEnd="2.5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/soundscardview">

    <ImageView
        android:id="@+id/iconSounds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pajaros"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/soundtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:elevation="6dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/downloadit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download96"
                android:tint="@color/colorCardView"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/playbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/playcircle96"
                android:tint="@color/colorCardView"
                android:visibility="gone"/>

        </FrameLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>